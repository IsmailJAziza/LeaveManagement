@model LeaveRequestCreateVM

@{
    ViewData["Title"] = "Create Leave Request";
}

<h1>Create Leave Request</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                <select asp-for="LeaveTypeId" class ="form-select " asp-items="@Model.LeaveTypes"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="RequestComment" class="control-label"></label>
                <textarea asp-for="RequestComment" class="form-control"></textarea>
                <span asp-validation-for="RequestComment" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group m-1">
                <input type="submit" value="Create" class="btn btn-success m-1" />
                <a class="btn btn-danger m-1"  asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
